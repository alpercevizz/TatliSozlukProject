@model Entities.Concrete.Heading
@{
    ViewBag.Title = "CreateHeading";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<h1>Başlık Ekle</h1>

<br />
@using (Html.BeginForm("CreateHeading", "AuthorPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br /> 

        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.valueCat, new { @class = "form-control" })
        <br />

        <button class="btn btn-info">Başlığı Oluştur</button>
    </div>
}

